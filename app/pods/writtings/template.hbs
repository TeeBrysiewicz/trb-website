{{page-title "Writtings"}}

{{#if (media "isMobile")}}
  <Navigation
    @showMenu={{this.showMenu}}
    @openMenu={{this.openMenu}}
    @writtings={{true}}
  />
{{/if}}

<div class="tbz-container">
  <div class="tbz-content-container">
    {{#unless (media "isMobile")}}
      <Navigation @writtings={{true}} />
    {{/unless}}

    <div class="tbz-content flex-row">
      <WrittingsMenu
        @model={{@model}}
        @showMenu={{this.showMenu}}
        @openMenu={{this.openMenu}}
      />

      <div class="tbz-writtings-content border-gradient">
        {{outlet}}
      </div>

    </div>
  </div>
  <div class="tbz-copyright">@ 2022 TB</div>
</div>